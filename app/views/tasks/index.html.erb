<%= paginate @tasks %>

<table id="tasks" border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status?</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% @tasks.each do |task| %>
  <tr id="<%= dom_id task %>">
    <%= render task %>
    <td>
      <%= link_to "Show this task", task %>
    </td>
  </tr>
  <% end %>
</table>

